{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "commons/*": ["../__commons__/src/*"]
    },
    "rootDirs": ["./src/", "../__commons__/src"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "src/__tests__",
    "jest.config"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
